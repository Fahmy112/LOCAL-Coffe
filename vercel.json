
    {
        "version": 2,
        "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "build" }
        }
        ],
        "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
        ],
        "env": {
        "JWT_SECRET": "@jwt_secret",
        "MONGO_URI": "@mongo_uri"
        }
    }